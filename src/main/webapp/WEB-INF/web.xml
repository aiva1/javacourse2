<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <!-- for using servlets
            <servlet>
                <servlet-name>__servlet name__</servlet-name>
                <servlet-class>__servlet path__</servlet-class>
            </servlet>
            <servlet-mapping>
                <servlet-name>__servlet name__</servlet-name>
                <url-pattern>/*</url-pattern>
            </servlet-mapping>
    -->


    <filter>
        <filter-name>MVCFilter</filter-name>
        <filter-class>lv.activestudio.java2.mvcnospring.MVCDispatcherFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>MVCFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>